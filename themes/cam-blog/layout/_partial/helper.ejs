<%

  mastheadData = function() {
    var data = {};

    data.unsplash_id = theme.unsplash.default_id;
    data.unsplash_user = theme.unsplash.default_user;

    if (page.unsplash_id) {
      data.unsplash_id = page.unsplash_id;
      data.unsplash_user = page.unsplash_user;
    }

    if (page.image) {
      data.headerStyle = 'background-image: linear-gradient(rgba(' + theme.images.header_top + '), rgba(' + theme.images.header_bottom + ')), url(' + page.image + ')';
    } else if (theme.images.default) {
      data.headerStyle = 'background-image: linear-gradient(rgba(' + theme.images.header_top + '), rgba(' + theme.images.header_bottom + ')), url(' + theme.images.default + ')';
    } else {
      var cover = "https://source.unsplash.com/" + data.unsplash_id + "/" + theme.unsplash.header;
      data.headerStyle = 'background-image: linear-gradient(rgba(' + theme.images.header_top + '), rgba(' + theme.images.header_bottom + ')), url(' + cover + ')';
      data.showUnsplashCredit = true;
    }
    return data;
  }

%>